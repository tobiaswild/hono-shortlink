{
  "format_on_save": "on",
  "tab_size": 2,
  "indent_guides": {
    "enabled": true
  },
  "formatter": {
    "external": {
      "command": "npx",
      "arguments": ["biome", "format", "--stdin-file-path", "{path}"]
    }
  },
  "code_actions_on_format": {
    "source.organizeImports": true,
    "source.fixAll.biome": true
  },
